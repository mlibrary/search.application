<%
  classes ||= []
  classes.push("list__no-style formats")
%>
<ul class="<%= classes.compact.join(" ") %>">
  <% values.each do |value| %>
    <li class="formats__item">
      <span class="material-symbols-rounded formats__item--icon" aria-hidden="true">
        <%= value.icon %>
      </span>
      <span class="formats__item--text">
        <%= value.text %>
      </span>
    </li>
  <% end %>
</ul>
