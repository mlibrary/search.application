<% if @patron.logged_in? %>
  <%= erb :"datastores/partials/actions/_alert" %>
  <form method="post" action="/actions/text" class="actions__form action__text--form">
    <label for="action__text--input">Phone number</label>
    <input type="tel" id="action__text--input" name="phone" aria-describedby="action__text--description" required autocomplete="on" value="" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
    <small id="action__text--description">Please enter using this format: 000-111-5555</small>
    <button type="submit">Send text</button>
  </form>
<% else %>
  <%= erb :"partials/header/_login" %>
<% end %>
