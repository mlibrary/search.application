<%
  margin = show_index ? "16px auto 0px auto" : "0px auto"
%>
<div style="background: #ffffff; background-color: #ffffff; border: 1px solid #e5e5e5; margin: <%= margin %>; border-radius: 4px; overflow: hidden;">
  <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%" style="margin: 0 auto;">
    <tr>
      <td align="center" valign="top" style="border-radius: 4px;">
        <%# START CONTENT CONTAINER %>
        <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%" class="container">
          <tr>
            <td>
              <%# START CONTENT %>
              <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%" style="min-width: 100%;">
                <tr>
                  <td style="padding: 16px; text-align: left;">
                    <%= erb :"/email/partials/list-item/_title", locals: { show_index: show_index, title: record.title, url: record.url } %>
                    <%= erb :"/email/partials/list-item/_metadata", locals: { metadata: record.metadata } %>
                  </td>
                </tr>
              </table>
              <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%" style="min-width: 100%;">
                <tr>
                  <td style="text-align: left;">
                    <%= erb :"/email/partials/list-item/_holdings", locals: { holdings: record.holdings } %>
                  </td>
                </tr>
              </table>
              <%# END CONTENT %>
            </td>
          </tr>
        </table>
        <%# END CONTENT CONTAINER %>
      </td>
    </tr>
  </table>
</div>
 