<table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%" style="margin: 0 auto;">
  <tr>
    <td align="center" valign="top">
      <%= erb :"email/partials/_border", locals: { color: "#e4e4e4", width: 2 } %>
      <%# START CONTENT CONTAINER %>
      <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" width="600" class="container">
        <tr>
          <td>
            <%# START CONTENT %>
            <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%" style="min-width: 100%;">
              <tr>
                <td style="<%= footer_text %> padding: 16px; text-align: center;" class="footer-text">
                  <p style="margin: 0px; <%= footer_text %>">
                    &copy;<%= Time.now.year %> Regents of the University of Michigan.
                  </p>
                  <p style="margin: 0px; <%= footer_text %>">
                    For details and exceptions, see the <%= link_to(body: "Copyright Policy", url: "https://lib.umich.edu/about-us/policies/copyright-policy") %>.
                  </p>
                </td>
              </tr>
            </table>
            <%# END CONTENT %>
          </td>
        </tr>
      </table>
      <%# END CONTENT CONTAINER %>
    </td>
  </tr>
</table>
