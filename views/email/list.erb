<%
  heading_text = "color: #262626; font-family: 'Noto Sans', Tahoma, Verdana, Arial, sans-serif; line-height: 1.5;"
%>
<table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%" style="min-width: 100%;">
  <tr>
    <td style="<%= heading_text %> padding-bottom: 16px; text-align: left;" class="body-text">
      <h1 style="font-size: 40px; font-weight: 700; margin: 0px; <%= heading_text %>">
        My Temporary List
      </h1>
      <% @records.keys.each do |datastore| %>
        <h2 style="font-size: 28px; font-weight: 700; margin: 16px 0px 0px 0px; <%= heading_text %>">
          <%= datastore %>
        </h2>
        <% @records[datastore].each_with_index do |record, index| %>
          <%= erb :"/email/partials/_list-item", locals: { show_index: index + 1, record: record.to_h } %>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>
